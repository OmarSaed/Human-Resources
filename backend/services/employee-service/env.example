# Environment
NODE_ENV=development
EMPLOYEE_SERVICE_PORT=3002
EMPLOYEE_SERVICE_HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/hrms_employee
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=1

# JWT Configuration (from shared config)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ISSUER=hrms-auth-service
JWT_AUDIENCE=hrms-system

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv
UPLOAD_PATH=./uploads
PROFILE_PICTURE_PATH=./uploads/profiles
DOCUMENT_PATH=./uploads/documents

# Employee Settings
EMPLOYEE_NUMBER_PREFIX=EMP
EMPLOYEE_NUMBER_LENGTH=6
DEFAULT_CURRENCY=USD
MAX_DIRECT_REPORTS=20
PROBATION_PERIOD_DAYS=90
MIN_EMPLOYEE_AGE=16
MAX_EMPLOYEE_AGE=70
REQUIRED_EMPLOYEE_FIELDS=firstName,lastName,email,departmentId,positionId,hireDate

# Performance Reviews
DEFAULT_REVIEW_CYCLE=ANNUAL
ENABLE_SELF_REVIEW=true
ENABLE_360_REVIEW=true
AUTO_PERFORMANCE_REMINDERS=true
REVIEW_REMINDER_DAYS=14
RATING_SCALE_MIN=1
RATING_SCALE_MAX=5

# Time Tracking
ENABLE_TIME_TRACKING=true
REQUIRE_CLOCK_IN_OUT=true
ENABLE_BREAK_TRACKING=true
ENABLE_LOCATION_TRACKING=false
OVERTIME_THRESHOLD=8
MAX_DAILY_HOURS=12
WORKING_DAYS=monday,tuesday,wednesday,thursday,friday
WORKING_HOURS_START=09:00
WORKING_HOURS_END=17:00

# Leave Management
ENABLE_LEAVE_REQUESTS=true
AUTO_APPROVE_LEAVE_DAYS=0
REQUIRE_LEAVE_APPROVAL=true
ALLOW_BACKDATED_REQUESTS=true
MAX_ADVANCE_LEAVE_DAYS=365
DEFAULT_ANNUAL_LEAVE=20
DEFAULT_SICK_LEAVE=10
LEAVE_CARRY_OVER_LIMIT=5

# Training
ENABLE_TRAINING_TRACKING=true
AUTO_ENROLL_NEW_EMPLOYEES=false
DEFAULT_TRAINING_BUDGET=1000
CERTIFICATE_VALIDITY_DAYS=365
TRAINING_REMINDER_DAYS=30

# Audit and Compliance
ENABLE_AUDIT_LOG=true
AUDIT_RETENTION_DAYS=2555
SENSITIVE_AUDIT_FIELDS=baseSalary,ssn,taxId
ENABLE_DATA_MASKING=false

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
NOTIFICATION_EVENTS=employee.created,employee.terminated,performance.review.due
NEW_EMPLOYEE_TEMPLATE=new-employee-welcome
PERFORMANCE_REVIEW_DUE_TEMPLATE=performance-review-due
LEAVE_REQUEST_TEMPLATE=leave-request-submitted
TRAINING_COMPLETED_TEMPLATE=training-completed

# Security
ENABLE_FIELD_LEVEL_SECURITY=false
ENABLE_DATA_ENCRYPTION=false
ENABLE_ACCESS_CONTROL=true
SENSITIVE_DATA_FIELDS=baseSalary,ssn,bankAccount,emergencyContact

# Integrations
ENABLE_PAYROLL_INTEGRATION=false
ENABLE_LDAP_SYNC=false
ENABLE_BANKING_INTEGRATION=false
PAYROLL_SERVICE_URL=
LDAP_SERVER=
BANKING_API_URL=

# Monitoring
ENABLE_EMPLOYEE_METRICS=true
ENABLE_EMPLOYEE_ANALYTICS=true
METRICS_INTERVAL=300
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_HEALTH_CHECKS=true

# Backup
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Kafka (from shared config)
KAFKA_CLIENT_ID=employee-service
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=employee-consumer-group
