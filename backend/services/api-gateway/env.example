# Environment
NODE_ENV=development
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
EMPLOYEE_SERVICE_URL=http://localhost:3002
RECRUITMENT_SERVICE_URL=http://localhost:3003
PERFORMANCE_SERVICE_URL=http://localhost:3004
LEARNING_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006
ANALYTICS_SERVICE_URL=http://localhost:3007

# Service Timeouts (milliseconds)
AUTH_SERVICE_TIMEOUT=5000
EMPLOYEE_SERVICE_TIMEOUT=5000
RECRUITMENT_SERVICE_TIMEOUT=5000
PERFORMANCE_SERVICE_TIMEOUT=5000
LEARNING_SERVICE_TIMEOUT=5000
NOTIFICATION_SERVICE_TIMEOUT=5000
ANALYTICS_SERVICE_TIMEOUT=5000

# Rate Limiting
GLOBAL_RATE_WINDOW=60000
GLOBAL_RATE_MAX=100
AUTH_RATE_WINDOW=300000
AUTH_RATE_MAX=10
USER_RATE_WINDOW=60000
USER_RATE_MAX=50
API_KEY_RATE_WINDOW=60000
API_KEY_RATE_MAX=1000

# Load Balancing
LOAD_BALANCE_STRATEGY=round-robin
HEALTH_CHECK_INTERVAL=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_MONITOR=120000

# Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ISSUER=hrms-auth-service
JWT_AUDIENCE=hrms-system
API_KEY_HEADER=x-api-key
API_KEYS=api-key-1,api-key-2,api-key-3

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Request Limits
REQUEST_SIZE_LIMIT=10mb
ENABLE_SECURITY_HEADERS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics
ENABLE_TRACING=false
TRACING_SAMPLE_RATE=0.1

# Caching
CACHING_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Logging
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true
GATEWAY_LOG_LEVEL=info
MAX_LOGGED_REQUEST_SIZE=1024
MAX_LOGGED_RESPONSE_SIZE=1024

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_FOLLOW_REDIRECTS=false
PROXY_CHANGE_ORIGIN=true
PROXY_PRESERVE_HEADER_CASE=false

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_INCLUDE_SERVICES=true
HEALTH_CHECK_TIMEOUT=5000

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=1

# Kafka Configuration (inherited from shared)
KAFKA_CLIENT_ID=api-gateway
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=gateway-consumer-group
